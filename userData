#!/bin/bash
useradd -m -G ssh_access apathros
mkdir /home/apathros/.ssh
echo "ssh-rsa  imported-openssh-key" > /home/apathros/.ssh/authorized_keys
chown apathros:apathros /home/apathros/.ssh/authorized_keys
chown apathros:apathros /home/apathros/.ssh
chmod 644 /home/apathros/.ssh/authorized_keys
chmod 700 /home/apathros/.ssh
echo "apathros ALL=(ALL) NOPASSWD: ALL" >> /etc/sudoers
yum install nvme-cli -y
#hostnamectl set-hostname --static ${hostname} ; reboot

