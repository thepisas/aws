{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "AWS template to  create  IAM users ,group, appropriate policies and other needed resources for the MontyCloud team",
    "Resources": {
        "IAMUser1": {
            "Type": "AWS::IAM::User",
            "Properties": {
                "UserName": "krajashe",
                "LoginProfile": {
                    "Password": "Temp!111",
                    "PasswordResetRequired": true
                }
            }
        },
        "IAMUser2": {
            "Type": "AWS::IAM::User",
            "Properties": {
                "UserName": "ctanalap",
                "LoginProfile": {
                    "Password": "Temp!111",
                    "PasswordResetRequired": true
                }
            }
        },
        "IAMUser3": {
            "Type": "AWS::IAM::User",
            "Properties": {
                "UserName": "gpullera",
                "LoginProfile": {
                    "Password": "Temp!111",
                    "PasswordResetRequired": true
                }
            }
        },
        "IAMUser4": {
            "Type": "AWS::IAM::User",
            "Properties": {
                "UserName": "gpalani",
                "LoginProfile": {
                    "Password": "Temp!111",
                    "PasswordResetRequired": true
                }
            }
        },
        "IAMUser5": {
            "Type": "AWS::IAM::User",
            "Properties": {
                "UserName": "testmonty",
                "LoginProfile": {
                    "Password": "Temp!111",
                    "PasswordResetRequired": true
                }
            }
        },
        "MontyCloudUserGroup": {
            "Type": "AWS::IAM::Group",
            "Properties": {
                "GroupName": "MontyCloud-UserGroup",
                "Path": "/",
                "ManagedPolicyArns": [
                    {
                        "Fn::Sub": "arn:aws:iam::${AWS::AccountId}:policy/ForceMFA"
                    },
                    {
                        "Fn::Sub": "arn:aws:iam::${AWS::AccountId}:policy/MontyCloud_AssumeProductionAccess"
                    },
                    {
                        "Fn::Sub": "arn:aws:iam::${AWS::AccountId}:policy/allows-assume-TCORO-in-MGMT"
                    }
                ]
            }
        },
        "UserToGroupAddition": {
            "Type": "AWS::IAM::UserToGroupAddition",
            "Properties": {
                "GroupName": {
                    "Ref": "MontyCloudUserGroup"
                },
                "Users": [
                    {
                        "Ref": "IAMUser1"
                    },
                    {
                        "Ref": "IAMUser2"
                    },
                    {
                        "Ref": "IAMUser3"
                    },
                    {
                        "Ref": "IAMUser4"
                    },
                    {
                        "Ref": "IAMUser5"
                    }
                ]
            }
        }
    },
    "Outputs": {
        "MontyCloudUserGroup": {
            "Value": {
                "Ref": "MontyCloudUserGroup"
            },
            "Description": "User Group Name"
        },
        "MontyCloudUser1": {
            "Value": {
                "Ref": "IAMUser1"
            },
            "Description": "IAM User Name"
        },
        "MontyCloudUser2": {
            "Value": {
                "Ref": "IAMUser2"
            },
            "Description": "IAM User Name"
        },
        "MontyCloudUser3": {
            "Value": {
                "Ref": "IAMUser3"
            },
            "Description": "IAM User Name"
        },
        "MontyCloudUser4": {
            "Value": {
                "Ref": "IAMUser4"
            },
            "Description": "IAM User Name"
        },
        "MontyCloudUser5": {
            "Value": {
                "Ref": "IAMUser5"
            },
            "Description": "IAM User Name"
        }
    }
}
